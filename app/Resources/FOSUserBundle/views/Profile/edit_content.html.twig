{% extends '::base.html.twig' %}
{% block body %}

{% trans_default_domain 'FOSUserBundle' %}



{% include 'header.html.twig' %}

<section>

  {% include 'aside.html.twig' %}

  <div class="container">
    <section class="contenue--profile">
      <article class="show--profile">
        <h3 class="title--profile">Modifier votre Profil</h3>
      <!--{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'form' } }) }}
            {{ form_widget(form, { 'attr': {'class': 'form_champ' }}) }}
              <div class="btn_submit">
                <input class="btn_modification" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
              </div>

        {{ form_end(form) }}-->


        <form action="{{ path("fos_user_profile_edit") }}" method="post" class="form">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ s }}" />
            {% endif %}


            <input type="text" id="username" name="_username" required="required" class="champ_form" placeholder="{{ 'security.login.username'|trans }}"/>
            <input type="password" id="password" name="_password" required="required" class="champ_form" placeholder="{{ 'security.login.password'|trans }}"/>

            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label class="remember" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

            <input type="submit" class="btn_connection" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </form>
      </article>
    </section>

  </div>

</section>





{% endblock %}
