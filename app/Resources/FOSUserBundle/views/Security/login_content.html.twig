
{% extends '::base.html.twig' %}

{% block body %}
{% trans_default_domain 'FOSUserBundle' %}

<section class="index">
  {% if error %}
      <div class="error"><i class="material-icons">warning</i>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}
  <article class="article_register">
    <h1 class="title"><img src="{{asset('bundles/images/logo.png')}}" alt="image_logo" class="logo">Workplace</h1>
    <p class="text_register">Vous n’êtes pas encore inscris ?</p>
    <a class="register" href="{{ path('fos_user_registration_register') }}">S'enregister</a>
  </article>

  <form action="{{ path("fos_user_security_check") }}" method="post" class="form">
      {% if csrf_token %}
          <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
      {% endif %}


      <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="champ_form" placeholder="{{ 'security.login.username'|trans }}"/>
      <input type="password" id="password" name="_password" required="required" class="champ_form" placeholder="{{ 'security.login.password'|trans }}"/>

      <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
      <label class="remember" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

      <input type="submit" class="btn_connection" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
  </form>

</section>
{% endblock %}
