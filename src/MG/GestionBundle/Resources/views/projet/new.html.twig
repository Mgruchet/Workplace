{% extends 'base.html.twig' %}

{% block body %}
    {% trans_default_domain 'FOSUserBundle' %}

    {% include 'header.html.twig' %}
    <section>
        {% include 'aside.html.twig' %}
        <div class="container">
            <section class="contenue--client">
                <article class="show--client">
                    <h3 class="title--client">Projet creation</h3>

                    {{ form_start(form, {'attr': {'class': 'form--client'}}) }}
                    {{ form_widget(form, {'attr': {'class': 'champ--client'}}) }}
                    <input class="btn__edit" type="submit" value="Ajouter" />
                    {{ form_end(form) }}

                    <ul>
                        <li>
                            <a class="btn_modification"href="{{ path('projet_index') }}">Retour aux clients</a>
                        </li>
                    </ul>
                </article>
            </section>
        </div>
    </section>

{% endblock %}
