{% extends 'base.html.twig' %}

{% block body %}

    {% trans_default_domain 'FOSUserBundle' %}

    {% include 'header.html.twig' %}
    <section>
        {% include 'aside.html.twig' %}
        <div class="container">
            <section class="contenue--client">
                <article class="show--projet">
                    <h3 class="title--project">Mes Projets</h3>
                    <ul>
                        <li>
                            <a class="btn__update" href="{{ path('projet_new') }}">Ajouter un projet</a>
                        </li>
                    </ul>
                </article>

                <article class="show--projet">
                    <h4 class="title--projet"><i class="material-icons">check_box_outline_blank</i>Projet à faire</h4>
                    <table>
                        <tbody>
                        {% for projet in projets_satrt %}
                            <tr>
                                <td class="text--projet"><i class="material-icons">folder_open</i> {{ projet.nom }}</td>
                                <td class="td--projet"><a class="btn__supp" href="{{ path('projet_show', { 'id': projet.id })}}">Consulter le projet</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </article>

                <article class="show--projet">
                    <h4 class="title--projet"><i class="material-icons">indeterminate_check_box</i>Projet en cours</h4>
                    <table>
                        <tbody>
                        {% for projet in projets_going %}
                            <tr>
                                <td class="text--projet"><i class="material-icons">folder_open</i> {{ projet.nom }}</td>
                                <td class="td--projet"><a class="btn__supp" href="{{ path('projet_show', { 'id': projet.id })}}">Consulter le projet</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </article>

                <article class="show--projet">
                    <h4 class="title--projet"><i class="material-icons">check_box</i>Projet terminé</h4>
                    <table>
                        <tbody>
                        {% for projet in projets_finished %}
                            <tr>
                                <td class="text--projet"><i class="material-icons">folder_open</i> {{ projet.nom }}</td>
                                <td class="td--projet"><a class="btn__supp" href="{{ path('projet_show', { 'id': projet.id })}}">Consulter le projet</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </article>
            </section>

        </div>
    </section>

{% endblock %}
